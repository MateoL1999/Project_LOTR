{% extends 'base.html.twig' %}

{% block body %}
    <section class="dashboard">
        <div class="title--dash">
            <h1>
                Categorie
            </h1>

        </div>
        <table class="table table_striped">

            <thead class="table">
            <th> Id</th>
            <th> Label</th>
            <th> Wiki</th>
            <th> Ã‰diter/Supprimer/<a class="new" href="{{ path('category_new') }}">New</a></th>
            </thead>
            <tbody>
            {% for category in categorys %}
                <tr class="style--dash">
                    <td>
                        {{ category.id }}
                    </td>
                    <td>
                        {{ category.label}}
                    </td>
                    {% for wiki in category.wikis %}
                    <td class="name--wiki">
                        {{ wiki }}
                    </td>
                    {% endfor %}
                    <td class="crud">
                        <a class="edit" href="{{ path('category_edit', {id: category.id }) }}">
                            <i class="fa-solid fa-pen text-primary"></i>
                        </a>
                        <a class="delete" href="{{ path('category_delete', {id: category.id}) }}">
                            <i class="fa fa-trash text-danger"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock body %}