<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ page_title|default('') }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    {{ encore_entry_link_tags('app') }}
    {% block css %}
    {% endblock %}
<body>
<header>
    <nav>
        <div class="conteneurP">
            <div class="Logo">
                <a href="{{ path('home') }}"> <img src="{{ asset ("Image/La_bibliotheque_de_Valinor.png") }}" alt="Logo du site"> </a>
            </div>
            <div class="menu display">
                <ul class="Hidden">
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li><a href="{{ path('wiki_listing') }} ">Article</a></li>
                    <li><a href="{{ path('wiki_recherche') }}">Recherche</a></li>
                    <li><a href="{{ path('Contact') }}">Contact</a></li>
                    {% if is_granted('ROLE_EDITEUR') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('categorie_listing') }}">Categories</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('user_listing') }}">Utilisateurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('comment_listing') }}">Commentaire</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_EDITEUR') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('wiki_admin') }}">Wiki-Admin</a>
                        </li>
                    {% endif %}
                    <li><a class="inscription" href="{{path('Inscription')}}">Inscription</a></li>
                    <li><a class="connecter" href="{{path('Connexion')}}">Connexion</a></li>
                </ul>
            </div>
            <div class="burger">
                <i class="fa fa-bars fa-2x"></i>
            </div>
        </div>
        {% for message in app.flashes('warning') %}
            <div class="securite">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('sucess') %}
            <div class="securite_V2">
                {{ message }}
            </div>
        {%  endfor %}
    </nav>
</header>

{##}

{% block body %}

{% endblock %}


 {% block javascript %}
 {{encore_entry_script_tags('app')}}
 {% endblock %}

<footer>
    <div>
        <div class="RGPD">
            <p><a href="{{path('Politique')}}">Politique de confidentialités</a></p>
            <p><a href="{{path('CGU')}}">Conditions d'utilisation</a></p>
        </div>
        <div class="footer">
            <div class="Dev">
                <p>
                    Site conçue par: Mateo Leiros
                </p>
                <p>
                    Projet de fin de formation
                </p>
            </div>
            <div class="reseaux">
                <div>
                    <p>
                        Mes réseaux:
                    </p>
                </div>
                <div class="conteneurIcone flex--spaceE">
                    <div class="icone">
                        <img src="{{ asset ("Image/facebook.png") }}" alt="Facebook icon">
                    </div>
                    <div class="icone">
                        <img src="{{ asset ("Image/linkedin.png") }}" alt="Twitter icon">
                    </div>
                    <div class="icone">
                        <img src="{{ asset ("Image/twitter.png") }}" alt="Linkedin icon">
                    </div>
                </div>
            </div>
        </div>
    </div>

</footer>


</body>
</html>