{% extends 'base.html.twig' %}

{% block body %}

<div id="search-form">
    <div id="search-form-content">
        {{ form_start(form)}}
        <div class="ConteneurS">
            <div class="Search--Titre">
                {{form_row(form.titre)}}
            </div>
            <div class="Search--Categories">
                {{form_row(form.categories)}}
            </div>
        </div>
        <div class="submit">
            {{ form_row(form.save) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
    <section class="ConteneurWiki">
        <div class="ConteneurCard">
            {% for wiki in wikis %}
                <div class="Card--Image">
                    <div class="Image--Wiki">
                        {% if wiki.imageName %}
                            <img src="{{ vich_uploader_asset(wiki, 'imageFile') }}" class="img-carte" alt="image_name">
                        {% else %}
                            <img src="https://cdn.pixabay.com/photo/2014/04/02/11/14/book-305625_1280.png"
                                 class="img-carte"
                                 alt="Default-image">
                        {% endif %}
                        <div class="Title">
                            <h5 class="title-carte">{{ wiki.titre }}</h5>
                        </div>
                    </div>
                    <div class="Title--Respond">
                        <h5 class="title-carte">
                            {{ wiki.titre }}
                        </h5>
                        <div class="Disparu">
                            <div class="Fleche">
                                <p class="Détails">
                                    DÉTAILS
                                </p>
                                <i class="fa-solid fa-arrow-right-long"></i>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock body %}
